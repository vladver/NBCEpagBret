{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Manager (watch)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build all",
            "program": "dotnet",
            "args": [
                "watch",
                "--project",
                ".",
                "--verbose"
            ],
            "cwd": "${workspaceFolder}/Presentation/NBCEpagBret.Manager",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
